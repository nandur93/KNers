<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".smartqap.inline.QcInlineFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/expand_button_0"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00b300"
                    android:elevation="6dp"
                    android:foreground="?selectableItemBackground"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="@string/title_qc_process"
                    android:textColor="#fff" />

                <net.cachapa.expandablelayout.ExpandableLayout
                    android:id="@+id/expandable_layout_0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:el_duration="500"
                    app:el_expanded="false">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            app:cardCornerRadius="6dp"
                            app:cardElevation="4dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_margin="5dp"
                                    android:elevation="6dp"
                                    android:background="#009900"
                                    android:clipToPadding="false"
                                    android:gravity="center"
                                    android:text="E-Form"
                                    android:textColor="#fff" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <Button
                                        android:id="@+id/button_create_new"
                                        android:layout_width="0dp"
                                        android:layout_height="48dp"
                                        android:layout_gravity="center"
                                        android:layout_margin="5dp"
                                        android:layout_weight="1"
                                        android:background="@color/colorPrimaryDark"
                                        android:drawableStart="@drawable/ic_spellcheck_white_24dp"
                                        android:paddingStart="10dp"
                                        android:paddingEnd="10dp"
                                        android:text="Create New"
                                        android:textAlignment="center"
                                        android:textColor="@android:color/white"
                                        android:textStyle="bold"
                                        tools:ignore="ButtonStyle,TooDeepLayout"
                                        tools:targetApi="lollipop" />

                                    <Button
                                        android:id="@+id/button_continue_last"
                                        android:layout_width="0dp"
                                        android:layout_height="48dp"
                                        android:layout_gravity="center"
                                        android:layout_margin="5dp"
                                        android:layout_weight="1"
                                        android:background="@color/colorPrimaryDark"
                                        android:drawableStart="@drawable/ic_spellcheck_white_24dp"
                                        android:paddingStart="10dp"
                                        android:paddingEnd="10dp"
                                        android:text="Continue Last Saved"
                                        android:textAlignment="center"
                                        android:textColor="@android:color/white"
                                        android:textStyle="bold"
                                        tools:ignore="ButtonStyle"
                                        tools:targetApi="lollipop" />

                                </LinearLayout>

                                <Button
                                    android:id="@+id/button_show_all_bo"
                                    android:layout_width="fill_parent"
                                    android:layout_height="48dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="5dp"
                                    android:layout_weight="1"
                                    android:background="@color/colorPrimaryDark"
                                    android:drawableStart="@drawable/ic_spellcheck_white_24dp"
                                    android:paddingStart="10dp"
                                    android:paddingEnd="10dp"
                                    android:text="Show All BO"
                                    android:textAlignment="center"
                                    android:textColor="@android:color/white"
                                    android:textStyle="bold"
                                    tools:ignore="ButtonStyle,TooDeepLayout"
                                    tools:targetApi="lollipop" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                app:cardCornerRadius="6dp"
                                app:cardElevation="6dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_margin="5dp"
                                    android:clipToPadding="false"
                                    android:elevation="4dp"
                                    android:gravity="center"
                                    android:text="Calibrations"
                                    android:background="#d3d3d3"
                                    android:textColor="#000" />
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                app:cardCornerRadius="6dp"
                                app:cardElevation="6dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_margin="5dp"
                                    android:clipToPadding="false"
                                    android:elevation="4dp"
                                    android:gravity="center"
                                    android:text="Chemical Stock"
                                    android:background="#d3d3d3"
                                    android:textColor="#000" />
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                app:cardCornerRadius="6dp"
                                app:cardElevation="6dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_margin="5dp"
                                    android:clipToPadding="false"
                                    android:elevation="4dp"
                                    android:gravity="center"
                                    android:text="Enviromental Stock"
                                    android:background="#d3d3d3"
                                    android:textColor="#000" />
                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                    </LinearLayout>
                </net.cachapa.expandablelayout.ExpandableLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/expand_button_1"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00f"
                    android:elevation="6dp"
                    android:foreground="?selectableItemBackground"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="QC Packing"
                    android:textColor="#fff" />

                <net.cachapa.expandablelayout.ExpandableLayout
                    android:id="@+id/expandable_layout_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:el_duration="500"
                    app:el_expanded="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            app:cardCornerRadius="6dp"
                            app:cardElevation="4dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_margin="5dp"
                                    android:elevation="6dp"
                                    android:background="#009900"
                                    android:clipToPadding="false"
                                    android:gravity="center"
                                    android:text="E-Form"
                                    android:textColor="#fff" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <Button
                                        android:id="@+id/button_create_new_packing"
                                        android:layout_width="0dp"
                                        android:layout_height="48dp"
                                        android:layout_gravity="center"
                                        android:layout_margin="5dp"
                                        android:layout_weight="1"
                                        android:background="@color/colorPrimaryDark"
                                        android:drawableStart="@drawable/ic_spellcheck_white_24dp"
                                        android:paddingStart="10dp"
                                        android:paddingEnd="10dp"
                                        android:text="Create New"
                                        android:textAlignment="center"
                                        android:textColor="@android:color/white"
                                        android:textStyle="bold"
                                        tools:ignore="ButtonStyle,TooDeepLayout"
                                        tools:targetApi="lollipop" />

                                    <Button
                                        android:id="@+id/button_continue_last_packing"
                                        android:layout_width="0dp"
                                        android:layout_height="48dp"
                                        android:layout_gravity="center"
                                        android:layout_margin="5dp"
                                        android:layout_weight="1"
                                        android:background="@color/colorPrimaryDark"
                                        android:drawableStart="@drawable/ic_spellcheck_white_24dp"
                                        android:paddingStart="10dp"
                                        android:paddingEnd="10dp"
                                        android:text="Continue Last Saved"
                                        android:textAlignment="center"
                                        android:textColor="@android:color/white"
                                        android:textStyle="bold"
                                        tools:ignore="ButtonStyle"
                                        tools:targetApi="lollipop" />

                                </LinearLayout>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </net.cachapa.expandablelayout.ExpandableLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/expand_button_2"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00f"
                    android:elevation="6dp"
                    android:foreground="?selectableItemBackground"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="3 Days"
                    android:textColor="#fff" />

                <net.cachapa.expandablelayout.ExpandableLayout
                    android:id="@+id/expandable_layout_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:el_duration="500"
                    app:el_expanded="false">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="5dp"
                        android:clipToPadding="false"
                        android:elevation="4dp"
                        android:gravity="center"
                        android:text="Load BO"
                        android:background="#d3d3d3"
                        android:textColor="#000" />

                </net.cachapa.expandablelayout.ExpandableLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</FrameLayout>