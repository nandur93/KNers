<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".DashboardProjectActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="25dp"
            android:text="User"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textViewUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="25dp"
            android:text="Username"
            android:textAlignment="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewDashboard"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Dashboard"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textSize="25dp"
            android:layout_gravity="center"/>


        <TextView
            android:paddingTop="10dp"
            android:id="@+id/textViewTopProject"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Top Project"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:layout_gravity="center"/>


        <com.github.lzyzsd.circleprogress.DonutProgress
            android:layout_gravity="center"
            android:id="@+id/progressBarLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            custom:donut_progress="30" />

        <Button
            android:id="@+id/buttonSeeDetailLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="See Detail"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:id="@+id/buttonEditProject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Edit Poject"
            android:layout_gravity="bottom"/>

        <Button
            android:id="@+id/buttonNewProject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="New Project"
            android:layout_gravity="bottom" />
    </LinearLayout>
</LinearLayout>