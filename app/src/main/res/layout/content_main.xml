<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                android:id="@+id/button_ocr_activity"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dip"
                android:background="@color/colorPrimaryDark"
                android:text="@string/button_ocr_activity"
                android:textColor="@android:color/white"
                android:drawableStart="@drawable/ic_camera_enhance_white_24dp"
                android:drawableLeft="@drawable/ic_camera_enhance_white_24dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:elevation="2dp"
                tools:targetApi="lollipop"
                android:layout_margin="5dp"/>

                <Button
                    android:id="@+id/button_code_match_activity"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="10dip"
                    android:background="@color/colorPrimaryDark"
                    android:text="@string/button_code_match_inspection"
                    android:textColor="@android:color/white"
                    android:drawableStart="@drawable/ic_spellcheck_white_24dp"
                    android:drawableLeft="@drawable/ic_spellcheck_white_24dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:elevation="2dp"
                    tools:targetApi="lollipop"
                    android:layout_margin="5dp"/>

                <Button
                    android:id="@+id/button_produk_knowledge"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/button_produk_knowledge"
                    android:enabled="false" />

                <Button
                    android:id="@+id/button_browser"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/button_kner_browser"/>

                <Button
                    android:id="@+id/button_history"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/button_history"/>

                <Button
                    android:id="@+id/button_project_tracker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/button_project_tracker" />

                <Button
                    android:id="@+id/button_grid_menu"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/button_grid_menu"/>

                <Button
                    android:id="@+id/button_unmount_otg"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/button_unmount_otg"/>

                <Button
                    android:id="@+id/button_profile"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/button_profile"/>
            </LinearLayout>

        </ScrollView>

        <com.google.android.gms.ads.AdView
            android:visibility="gone"
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            ads:adSize="SMART_BANNER"
            ads:adUnitId="ca-app-pub-3940256099942544/6300978111">
        </com.google.android.gms.ads.AdView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>